
/**index.wxss**/
.main-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx 30rpx 50rpx 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #1e1e1e;
  display: inline-block;
  margin-bottom: 3px;
}

.userinfo-sentence {
  color: #aaaaaa;
  font-size: 25rpx;
}

.usermotto {
  margin-top: 200px;
}


.auth-banner {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 150rpx 30rpx 80rpx 30rpx;
}

.loading-pic {
  width: 120rpx;
  height: 120rpx;
}

.index-header {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 200rpx;
  background-color: #ffffff;
  /*box-shadow: 0 5rpx 20rpx #c9c9c9;*/
}

.title-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.picker-container {
  width: 100%;
}

.picker-select {
  padding: 20rpx 0;
  width: 96%;
}

.picker {
  font-size: 30rpx;
  width: 100%;
}

.tickets-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  width: 80%;
  padding: 10rpx;
}

.ticket {
  width: 100%;
  padding: 20rpx 30rpx;

  border: 1px solid #dcdcdc;
  border-radius: 15rpx;

  font-size: 30rpx;

  margin-bottom: 30rpx;
}

.shadow-red {
  box-shadow: -20rpx 5rpx #ff5945 inset;
}

.shadow-yellow {
  box-shadow: -20rpx 5rpx #ffcf5d inset;
}

.shadow-blue {
  box-shadow: -20rpx 5rpx #3385ff inset;
}

.shadow-green {
  box-shadow: -20rpx 5rpx #1aad19 inset;
}

.ticket:last-child {
  margin-bottom: 180rpx;
}

.reset-button-area {
  margin-right: 50rpx;
  margin-left: auto;
}

.trash-button {
  width: 60rpx;
  height: 60rpx;
}


